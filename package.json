{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "pnpm prebuild && next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "stylelint": "stylelint '**/*.{css,scss}'",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "validate-types": "tsc --project ./tsconfig.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky install",
    "copy-pdf-worker": "cp node_modules/.pnpm/pdfjs-dist@2.16.105/node_modules/pdfjs-dist/build/pdf.worker.min.js public/pdf.worker.js",
    "prebuild": "pnpm copy-pdf-worker",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage --silent",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "cookie": "^0.6.0",
    "js-cookie": "^3.0.5",
    "next": "^14.0.0",
    "next-intl": "^3.17.2",
    "next-seo": "^6.6.0",
    "radash": "^12.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.3.0",
    "react-intersection-observer": "^9.13.0",
    "react-pdf": "^6.2.2",
    "sanitize-html": "^2.13.0",
    "the-new-css-reset": "^1.11.2",
    "ua-parser-js": "^1.0.38",
    "usehooks-ts": "^3.1.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.2.8",
    "@storybook/addon-interactions": "^8.2.8",
    "@storybook/addon-links": "^8.2.8",
    "@storybook/blocks": "^8.2.8",
    "@storybook/nextjs": "^8.2.8",
    "@storybook/react": "^8.2.8",
    "@storybook/test": "^8.2.8",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cli-color": "^2.0.6",
    "@types/cookie": "^0.6.0",
    "@types/jest": "^29.5.14",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.8.8",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-pdf": "^6.2.0",
    "@types/sanitize-html": "^2.13.0",
    "@types/ua-parser-js": "^0.7.39",
    "@types/user-agents": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@typescript-eslint/utils": "^6.21.0",
    "eslint": "^8.36.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-perfectionist": "^2.7.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-testing-library": "^5.11.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-next-dynamic": "^1.0.1",
    "lint-staged": "^15.2.9",
    "loader-utils": "^3.3.1",
    "node-fetch": "^3.3.1",
    "prettier": "^3.3.2",
    "sass": "^1.49.10",
    "sass-loader": "^12.4.0",
    "storybook": "^8.2.8",
    "stylelint": "^16.8.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "@types/react": "18.0.28"
  },
  "engines": {
    "node": ">=18.20.4",
    "npm": "please-use-pnpm"
  },
  "author": "Anil Karaabali anilkaraabali@gmail.com",
  "description": "A starter template for modern web applications with Next.js, TypeScript, React, and a variety of pre-configured tools and dependencies for smooth development, testing, and deployment.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anilkaraabali/nextjs-boilerplate.git"
  }
}
